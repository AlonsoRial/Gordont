<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MimirActivity"
        android:background="@color/light_black">


        <ImageView
            android:id="@+id/imageViewYoda"
            android:layout_width="355dp"
            android:layout_height="235dp"
            HorizontalOptions="CenterAndExpand"
            VerticalOptions="CenterAndExpand"
            android:src="@drawable/yoda3"
            app:layout_constraintBottom_toTopOf="@+id/relativeLayout3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.301" />

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="353dp"
            android:layout_height="350dp"
            HorizontalOptions="CenterAndExpand"
            VerticalOptions="CenterAndExpand"
            android:background="@drawable/custom_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.74">

            <TextView
                android:id="@+id/textDormir"
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="CenterAndExpand"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="83dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="92dp"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:text="Hora de dormir es"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Chronometer
                android:id="@+id/simpleChronometer"
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textDormir"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="103dp"
                android:layout_marginTop="130dp"
                android:layout_marginEnd="116dp"
                android:background="@color/orange"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textHorasSueno"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="CenterAndExpand"
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="84dp"
                android:layout_marginTop="125dp"
                android:layout_marginEnd="91dp"
                android:fontFamily="@font/open_sans"
                android:gravity="center"
                android:text="Contabilizar horas de sueÃ±o"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <Button
                android:id="@+id/ButtonStopSuenyo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/simpleChronometer"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="201dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="54dp"
                android:layout_marginBottom="9dp"
                android:background="@drawable/custom_button"
                android:fontFamily="@font/open_sans"
                android:text="Parar"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/ButtonStartSuenyo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/simpleChronometer"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="54dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="201dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_button"
                android:fontFamily="@font/open_sans"
                android:text="Empezar"
                android:textColor="@color/black" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/custom_footer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <ImageButton
                android:id="@+id/ButtonHome"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="CenterAndExpand"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="14dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="331dp"
                android:layout_marginBottom="3dp"
