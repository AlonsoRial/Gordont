<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Quest_view"
        android:background="@color/light_black">

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="353dp"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/custom_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <TextView
                android:id="@+id/textNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/editNombre"
                android:layout_alignParentStart="true"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="11dp"
                android:fontFamily="@font/open_sans"
                android:text="Nombre"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editAltura"
                android:layout_width="328dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textPeso"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/custom_textview"
                android:hint="Respuesta 1"
                android:inputType="numberDecimal"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textAltura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/editNombre"
                android:layout_alignParentStart="true"
                android:layout_marginStart="14dp"
                android:layout_marginBottom="-57dp"
                android:fontFamily="@font/open_sans"
                android:text="Altura"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editNombre"
                android:layout_width="328dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textPeso"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="72dp"
                android:background="@drawable/custom_textview"
                android:hint="Respuesta 1"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textPeso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/editPeso"
                android:layout_alignParentStart="true"
                android:layout_marginStart="11dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/open_sans"
                android:text="Peso"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/editNombre" />

            <EditText
                android:id="@+id/editPeso"
                android:layout_width="328dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textEdad"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="11dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/custom_textview"
                android:hint="Respuesta 2"
                android:inputType="numberDecimal"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textEdad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/editEdad"
                android:layout_alignParentStart="true"
                android:layout_marginStart="11dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/open_sans"
                android:text="Edad"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editEdad"
                android:layout_width="328dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textSexo"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_textview"
                android:hint="Respuesta 3"
                android:inputType="numberDecimal"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textSexo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/relativeLayout"
                android:layout_alignParentStart="true"
                android:layout_marginStart="11dp"
                android:layout_marginBottom="11dp"
                android:fontFamily="@font/open_sans"
                android:text="Sexo"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="500dp"
                android:layout_height="300dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="-1dp"
                app:layout_constraintTop_toBottomOf="@+id/textSexo">

                <RadioGroup
                    android:id="@+id/opciones_sexo"
                    android:layout_width="278dp"
                    android:layout_height="65dp"
                    android:layout_above="@+id/ButtonSave"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="36dp"
                    android:layout_marginEnd="38dp"
                    android:layout_marginBottom="128dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioChico"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="70dp"
                        android:checked="true"
                        android:text="Hombre" />

                    <RadioButton
                        android:id="@+id/radioChica"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:checked="false"
                        android:text="Mujer" />

                </RadioGroup>

                <ImageView
                android:layout_width="164dp"
                android:layout_height="115dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="91dp"
                android:layout_marginEnd="31dp"
                android:layout_marginBottom="94dp"
                android:src="@drawable/male_chad" />

            <ImageView
                android:layout_width="154dp"
                android:layout_height="114dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="31dp"
                android:layout_marginTop="94dp"
                android:layout_marginEnd="26dp"
                android:layout_marginBottom="92dp"
                android:src="@drawable/female" />

            <Button
                android:id="@+id/ButtonSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="125dp"
                android:layout_marginEnd="138dp"
                android:layout_marginBottom="31dp"
                android:background="@drawable/custom_button"
                android:text="Save"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />

            </RelativeLayout>

        </RelativeLayout>

    </android.support.constraint.ConstraintLayout>
</layout>